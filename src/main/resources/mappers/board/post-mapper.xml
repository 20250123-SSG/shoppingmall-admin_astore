<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.aplestore.dao.PostMapper">
    <resultMap id="postResultMap" type="PostDTO">
        <id column="id" property="id"/>
      <result column="board_id" property="boardId"/>
        <result column="post_subject" property="postSubject"/>
        <result column="user_id" property="userId"/>
        <result column="created_at" property="createdAt"/>
      <result column="post_content" property="postContent"/>
      <result column="post_status" property="postStatus"/>
      <result column="modified_at" property="modifiedAt"/>

    </resultMap>
 <select id="selectPostListCount" resultType="_int">
     select
         count(*)
     from
         posts
     where
         post_status = '1'
 </select>
  <select id="selectPostList" resultMap="postResultMap">
    SELECT
      id,
      post_subject   ,
      user_id    ,
      created_at
    FROM posts
    WHERE post_status = '1'
    ORDER BY id DESC
    limit #{offset}, #{display}
  </select>

    <select id="selectPostByNo" resultMap="postResultMap">
        select
              id
             ,post_subject
             , post_content
             , user_id
             ,created_at
        from
            posts
        where
            post_status = '1'
          and id = #{no}
    </select>

