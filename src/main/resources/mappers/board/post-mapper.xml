  <select id="selectAll" resultType="com.aplestore.dto.PostDTO">
    SELECT id, post_subject, user_id, created_at AS createdAt
    FROM posts
    ORDER BY id DESC
  </select>

  <delete id="deleteByIds" parameterType="list">
    DELETE FROM posts
    WHERE id IN
    <foreach item="id" collection="ids" open="(" separator="," close=")">
      #{id}
    </foreach>
  </delete>

  <insert id="insertPost"
          parameterType="com.aplestore.dto.PostDTO"
          useGeneratedKeys="true"
          keyProperty="id">
    INSERT INTO posts
      (post_subject, post_content, user_id, post_status, created_at)
    VALUES
      (#{postSubject}, #{postContent}, #{userId}, #{postStatus}, NOW())
  </insert>

  <!-- 2) 단일 조회 (수정 폼에 뿌릴 데이터) -->
  <select id="selectById" resultMap="postResultMap" parameterType="int">
    SELECT id, post_subject, post_content, user_id, post_status, created_at
    FROM posts
    WHERE id = #{id}
  </select>
  <!-- 5) 수정 -->
  <update id="updatePost" parameterType="com.aplestore.dto.PostDTO">
    UPDATE posts
    SET post_subject = #{postSubject},
        post_content = #{postContent}
    WHERE id = #{id}
  </update>
</mapper>
